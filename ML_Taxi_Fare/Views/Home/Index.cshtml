@model ML_Taxi_Fare.Models.TaxiFarePredictionModel


@{
    ViewBag.Title = "Home Page";
}


@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
  <div class="row">
    <div class="col-md-6">
        <section id="col-1">
            <div class="form-group">
                @Html.LabelFor(model => model.Passenger_count, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Passenger_count)
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Trip_time_in_secs, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Trip_time_in_secs)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Trip_distance, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Trip_distance)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Payment_type, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Payment_type)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Calculate" class="btn btn-success" />
                </div>
            </div>
        </section>

    </div>  
   
    <div class="col-md-6">
        <section id="col-2">
            <div class="form-group">
                <div class="col-md-10">
                    <h2>Fare Price: @ViewBag.Price</h2>
                </div>
            </div>

        </section>
    </div>

 </div>
}


